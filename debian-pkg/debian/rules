#!/usr/bin/make -f

%:
	dh $@

execute_after_dh_fixperms:
	chmod 0700 debian/tinypilot/opt/tinypilot-privileged/init-usb-gadget
	chmod 0700 debian/tinypilot/opt/tinypilot-privileged/remove-usb-gadget

override_dh_installsystemd:
	dh_installsystemd --name=tinypilot-updater --no-start --no-enable
	dh_installsystemd --name=usb-gadget --no-start
